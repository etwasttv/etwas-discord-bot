// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id String @id
}

model Room {
  voiceChannelId String @unique
  voiceChannel   VoiceChannel @relation(fields: [voiceChannelId], references: [voiceChannelId], onDelete: Cascade)
  textChannelId  String @unique
  textChannel    TextChannel @relation(fields: [textChannelId], references: [textChannelId], onDelete: Cascade)

  @@id([voiceChannelId, textChannelId])
}

model VoiceChannel {
  voiceChannelId   String @id
  voiceChannelName String
  guildId          String
  room             Room?
}

model TextChannel {
  textChannelId   String @id
  textChannelName String
  guildId         String
  room            Room?
}
